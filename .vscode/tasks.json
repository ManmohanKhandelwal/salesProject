{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check User Confirmation",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/ask.bat",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Detect Remote & Git Pull",
      "type": "shell",
      "command": "git pull https://github.com/ManmohanKhandelwal/salesProject",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "close": true
      },
      "dependsOn": ["Check User Confirmation"]
    },
    {
      "label": "Install Backend Dependencies",
      "type": "shell",
      "command": "echo Installing Backend Dependencies; npm i",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "backend"
      },
      "dependsOn": ["Check User Confirmation"]
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "echo Installing Frontend Dependencies; npm i",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "frontend"
      },
      "dependsOn": ["Check User Confirmation"]
    },
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "npm run dev",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "backend"
      },
      "dependsOn": ["Install Backend Dependencies"]
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "start chrome http://localhost:3000; npm run dev",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "frontend"
      },
      "dependsOn": ["Install Frontend Dependencies"]
    },
    {
      "label": "Run Everything",
      "dependsOn": [
        "Check User Confirmation",
        "Detect Remote & Git Pull",
        "Install Backend Dependencies",
        "Install Frontend Dependencies",
        "Start Frontend & Backend"
      ],
      "problemMatcher": [],
      "group": "build",
      "dependsOrder": "sequence",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start Frontend & Backend",
      "dependsOn": ["Run Backend", "Run Frontend"],
      "problemMatcher": [],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
