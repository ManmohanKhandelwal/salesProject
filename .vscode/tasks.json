    {
      "label": "Run Backend",
      "type": "shell",
      "command": "git pull https://github.com/ManmohanKhandelwal/salesProject; npm i ;  npm run dev",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "backend"
      }
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "start chrome http://localhost:3000; npm i ;  npm run dev",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "frontend"
      }
    },
    {
      "label": "Run Everything",
      "dependsOn": ["Start Frontend & Backend"],
      "problemMatcher": [],
      "group": "build",
      "dependsOrder": "sequence"
    },
    {
      "label": "Start Frontend & Backend",
      "dependsOn": ["Run Backend", "Run Frontend"],
      "problemMatcher": [],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
